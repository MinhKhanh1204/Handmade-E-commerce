@model IEnumerable<BussinessObject.Order>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-clipboard-x fs-1 text-muted"></i>
        <h4 class="mt-3">No orders found</h4>
        <p class="text-secondary">You haven’t made any purchases yet.</p>
        <a href="~/Products" class="btn btn-primary mt-3">Shop Now <i class="bi bi-arrow-right"></i></a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var order in Model)
        {
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100 shadow-sm border-0 order-card">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">Order #@order.OrderId</h5>
                                <span class="badge bg-info text-dark">@order.PaymentStatus</span>
                            </div>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar-event"></i>
                                @(order.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-geo-alt"></i> @order.ShippingAddress
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-truck"></i> <strong>@order.ShippingStatus</strong>
                            </p>
                        </div>
                        <div class="mt-3 border-top pt-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-bold text-dark">Total:</span>
                                    <span class="fw-bold text-success">$@(order.TotalAmount?.ToString("N2") ?? "0.00")</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-primary btn-sm">
                                    View Details <i class="bi bi-eye ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    @if (order.OrderItems != null && order.OrderItems.Any())
                    {
                        <div class="mt-3">
                            <ul class="list-unstyled mb-2">
                                @foreach (var item in order.OrderItems.Take(2))
                                {
                                    <li>
                                        <i class="bi bi-dot"></i>
                                        @item.Product?.ProductName (x @item.Quantity)
                                    </li>
                                }
                            </ul>
                            @if (order.OrderItems.Count > 2)
                            {
                                <small class="text-muted">+ @order.OrderItems.Count sản phẩm khác</small>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

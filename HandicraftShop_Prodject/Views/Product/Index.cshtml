@model HandicraftShop_Prodject.Models.ProductViewModel
@{
    ViewData["Title"] = "Product Page";
}
<!-- Page Title -->
<div class="page-title light-background">
    <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Product</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a href="/Product">Home</a></li>
                <li class="current">Product</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<div class="container">
    <div class="row">

        <div class="col-lg-12">
            <!-- Category Header Section -->
            <section id="category-header" class="category-header section" style="padding-top: 10px">

                <div class="container" data-aos="fade-up">

                    <!-- Filter and Sort Options -->
                    <div class="filter-container mb-4" data-aos="fade-up" data-aos-delay="100" style="padding: 0px">
                        <div class="row g-3">
                            <div class="col-md-6 col-lg-8"></div>
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="filter-item search-form">
                                    <label for="productSearch" class="form-label">Search Products</label>
                                    <div class="input-group">
                                        <input type="text" value="@Model.Search" class="form-control" id="productSearch" placeholder="Search for products..." aria-label="Search for products">
                                        <button id="btnSearch" class="btn search-btn" type="button">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </section><!-- /Category Header Section -->
        </div>

        <div class="col-lg-3 sidebar">

            <div class="widgets-container" style="margin-top: 0px">

                <!-- Product Categories Widget -->
                <div class="product-categories-widget widget-item">

                    <h3 class="widget-title">Categories</h3>
                    <ul class="category-tree mb-0">
                        <!-- Books Category (no subcategories) -->
                        @foreach (var item in Model.Categories)
                        {
                            <li class="category-item @(Model.CategoryId == item.CategoryId ? "active" : "")"
                                data-category="@item.CategoryId">
                                <div class="d-flex justify-content-between align-items-center category-header" style="padding-left:20px">
                                    <a href="#" class="category-link">@item.CategoryName</a>
                                </div>
                            </li>
                        }
                    </ul>

                </div><!--/Product Categories Widget -->
            </div>

        </div>

        <div class="col-lg-9" id="product-list">
            @Html.Partial("_ProductListPartial", Model.Products)
        </div>

    </div>
</div>


@section Scripts {
    <script>
        // Hàm load sản phẩm bằng AJAX
        function loadProducts(search, categoryId, page) {
            $.ajax({
                url: '/Product/Index',
                type: 'GET',
                data: {
                    search: search,
                    categoryId: categoryId,
                    page: page
                },
                headers: { "X-Requested-With": "XMLHttpRequest" },
                success: function (response) {
                    $("#product-list").html(response);
                },
                error: function () {
                    alert("Không thể tải danh sách sản phẩm.");
                }
            });
        }

        function updateCategoryHighlight(categoryId) {
            $('.category-item').removeClass('active');
            $('.category-item[data-category="' + categoryId + '"]').addClass('active');
        }

        $(document).ready(function () {
            // Sự kiện search
            $("#btnSearch").click(function () {
                const search = $("#productSearch").val();
                const categoryId = $(".category-item.active").data("category");
                loadProducts(search, categoryId, 1);
            });

            // Enter để search
            $("#productSearch").keypress(function (e) {
                if (e.which === 13) {
                    $("#btnSearch").click();
                }
            });

            // Click category
            $(".category-item").click(function () {
                const categoryId = $(this).data("category");
                updateCategoryHighlight(categoryId);
                loadProducts($("#productSearch").val(), categoryId, 1);
            });

            // Click phân trang (sẽ bind lại mỗi lần load partial)
            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                const page = $(this).data("page");
                const search = $("#productSearch").val();
                const categoryId = $(".category-item.active").data("category");
                loadProducts(search, categoryId, page);
            });
        });
    </script>
}
@model IEnumerable<DTO.ProductDTO>
@using System.Linq

@{
    ViewData["Title"] = "Product Management";

    int currentPageSize = 10;
    int currentPage = 1;
    string currentSearch = "";

    if (ViewBag.PageSize != null)
        int.TryParse(ViewBag.PageSize.ToString(), out currentPageSize);

    if (ViewBag.CurrentPage != null)
        int.TryParse(ViewBag.CurrentPage.ToString(), out currentPage);

    if (ViewBag.SearchString != null)
        currentSearch = ViewBag.SearchString.ToString();
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Product Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active">Products</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- Filter & Controls -->
                        <div class="d-flex w-100 justify-content-between align-items-center mt-3 mb-3">
                            <!-- Page Size -->
                            <div>
                                <form method="get" id="pageSizeForm">
                                    <select name="pageSize" class="form-select"
                                            onchange="document.getElementById('pageSizeForm').submit()">
                                        @{
                                            int[] sizes = new int[] { 5, 10, 25, 50 };
                                        }

                                        @foreach (var size in sizes)
                                        {
                                            if (currentPageSize == size)
                                            {
                                                <option value="@size" selected="selected">@size</option>
                                            }
                                            else
                                            {
                                                <option value="@size">@size</option>
                                            }
                                        }
                                    </select>
                                </form>
                            </div>

                            <!-- Search -->
                            <div class="d-flex">
                                <form method="get" class="d-flex">
                                    <input type="text" name="searchString" value="@currentSearch"
                                           class="form-control me-2" placeholder="Search..." />
                                    <input type="hidden" name="pageSize" value="@currentPageSize" />
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </form>
                            </div>

                            <!-- Add New -->
                            <div>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add New Product
                                </a>
                            </div>
                        </div>

                        <!-- Product Table -->
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Product ID</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Created</th>
                                    <th>Stock</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted">No products found.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var p in Model)
                                    {
                                        <tr>
                                            <td style="width:70px">
                                                <img src="@(p.MainImageUrl ?? "/images/no-image.png")"
                                                     alt="Product Image"
                                                     class="rounded"
                                                     style="width:60px;height:60px;object-fit:cover;" />
                                            </td>
                                            <td>@p.ProductName</td>
                                            <td>@p.ProductId</td>
                                            <td>@(p.CategoryName ?? "-")</td>
                                            <td>@(p.Price.HasValue ? p.Price.Value.ToString("C") : "-")</td>
                                            <td>@(p.CreatedAt.HasValue ? p.CreatedAt.Value.ToString("yyyy/MM/dd") : "-")</td>
                                            <td>@(p.StockQuantity ?? 0)</td>
                                            <td>
                                                <span class="btn btn-sm @(p.Status == "Active" ? "btn-success" : "btn-danger")">
                                                    @p.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@p.ProductId" class="btn btn-info text-white">
                                                        <i class="bi bi-eye"></i> Detail
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <nav>
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link"
                                           href="@Url.Action("Index", new { searchString = currentSearch, page = i, pageSize = currentPageSize })">
                                            @i
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

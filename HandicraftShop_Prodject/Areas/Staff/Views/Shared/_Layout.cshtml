@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - Staff Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link rel="icon" href="~/admin/assets/img/favicon.png" asp-append-version="true" />
    <link rel="apple-touch-icon" href="~/admin/assets/img/apple-touch-icon.png" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Nunito:300,400,600,700|Poppins:300,400,500,600,700" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/admin/assets/vendor/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/boxicons/css/boxicons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/quill/quill.snow.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/quill/quill.bubble.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/remixicon/remixicon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/assets/vendor/simple-datatables/style.css" asp-append-version="true" />

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/admin/assets/css/style.css" asp-append-version="true" />
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a asp-area="Staff" asp-controller="Dashboard" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/admin/assets/img/logo.png" alt="Logo" asp-append-version="true" />
                <span class="d-none d-lg-block">Handmade Admin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-area="Staff" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-box-seam"></i>
                    <span>Product Management</span>
                </a>
            </li><!-- End Product Management Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Staffs" asp-action="Index">
                    <i class="bi bi-people"></i>
                    <span>Staff Management</span>
                </a>
            </li><!-- End Staff Management Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-receipt-cutoff"></i>
                    <span>Order Management</span>
                </a>
            </li><!-- End Order Management Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Articles" asp-action="Index">
                    <i class="bi bi-journal-text"></i>
                    <span>Article Management</span>
                </a>
            </li><!-- End Articles Nav -->

            <li class="nav-heading">Account</li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Account" asp-action="Profile">
                    <i class="bi bi-person"></i>
                    <span>Profile</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Staff" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar-->
    <!-- ======= Main Content ======= -->
    <main id="main" class="main">
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; @DateTime.Now.Year <strong><span>Handmade Admin</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Template by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <!-- Vendor JS Files -->
    <script src="~/admin/assets/vendor/apexcharts/apexcharts.min.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/chart.js/chart.umd.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/echarts/echarts.min.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/quill/quill.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/simple-datatables/simple-datatables.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/admin/assets/vendor/php-email-form/validate.js" asp-append-version="true"></script>

    <!-- Template Main JS File -->
    <script src="~/admin/assets/js/main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

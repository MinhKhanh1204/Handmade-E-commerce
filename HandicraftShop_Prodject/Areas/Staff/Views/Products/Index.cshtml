@model IEnumerable<DTO.ProductDTO>
@using System.Linq

@{
    ViewData["Title"] = "Product Management";

    // Lấy dữ liệu từ ViewBag
    int currentPageSize = 10;
    int currentPage = 1;
    string currentSearch = "";

    if (ViewBag.PageSize != null)
        int.TryParse(ViewBag.PageSize.ToString(), out currentPageSize);

    if (ViewBag.CurrentPage != null)
        int.TryParse(ViewBag.CurrentPage.ToString(), out currentPage);

    if (ViewBag.SearchString != null)
        currentSearch = ViewBag.SearchString.ToString();
}

<main id="main" class="main">
    <div class="pagetitle mb-4">
        <h1>Product Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active">Products</li>
            </ol>
        </nav>
    </div>

    <div class="container-fluid px-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Filter & Controls -->
                <div class="d-flex flex-wrap justify-content-between align-items-center mt-3 mb-3 gap-3">
                    <!-- Page Size -->
                    <form method="get" id="pageSizeForm" class="d-inline-block">
                        <select name="pageSize" class="form-select"
                                onchange="document.getElementById('pageSizeForm').submit()">
                            @{
                                int[] sizes = new int[] { 5, 10, 25, 50 };
                            }

                            @foreach (var size in sizes)
                            {
                                <option value="@size" selected="@(currentPageSize == size)">
                                    @size
                                </option>
                            }
                        </select>
                    </form>

                    <!-- Search -->
                    <form method="get" class="d-flex align-items-center">
                        <input type="text" name="searchString" value="@currentSearch"
                               class="form-control me-2" placeholder="Search..." />
                        <input type="hidden" name="pageSize" value="@currentPageSize" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>

                    <!-- Add New -->
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Product
                    </a>
                </div>

                <!-- Product Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Product ID</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Created</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted">No products found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var p in Model)
                                {
                                    <tr>
                                        <td style="width:70px">
                                            <img src="@(p.MainImageUrl ?? "/images/no-image.png")"
                                                 alt="Product Image"
                                                 class="rounded"
                                                 style="width:60px;height:60px;object-fit:cover;" />
                                        </td>
                                        <td>@p.ProductName</td>
                                        <td>@p.ProductId</td>
                                        <td>@(p.CategoryName ?? "-")</td>
                                        <td>@(p.Price.HasValue? p.Price.Value.ToString("C") : "-")</td>
                                        <td>@(p.CreatedAt?.ToString("yyyy/MM/dd") ?? "-")</td>
                                        <td>@(p.StockQuantity ?? 0)</td>
                                        <td>
                                            <span class="badge bg-@(p.Status == "Active" ? "success" : "danger")">
                                                @p.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@p.ProductId"
                                               class="btn btn-info btn-sm text-white">
                                                <i class="bi bi-eye"></i> Detail
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav>
                    <ul class="pagination justify-content-center mt-4">
                        @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", new { searchString = currentSearch, page = i, pageSize = currentPageSize })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>

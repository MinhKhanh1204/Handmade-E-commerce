@model BussinessObject.Product
@using System.Linq

@{
    ViewData["Title"] = "Product Details";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Product Details</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
                <li class="breadcrumb-item active">Details</li>
            </ol>
        </nav>
    </div>

    <section class="section contact">
        <div class="row gy-4">

            <!-- Left column: Product Images -->
            <div class="col-xl-6">
                <div class="row g-3">
                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        @foreach (var img in Model.ProductImages)
                        {
                            <div class="col-lg-6">
                                <div class="card info-box">
                                    <img src="@(img.ImageUrl ?? "/images/no-image.png")" alt="Product Image" class="img-fluid rounded" />
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-lg-12">
                            <div class="card info-box text-center py-3">
                                <p>No images available.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Right column: Product Details -->
            <div class="col-xl-6">
                <div class="card p-4">
                    <div class="row gy-3">
                        <div class="col-md-6">
                            <label class="form-label">Product ID</label>
                            <input type="text" class="form-control" value="@Model.ProductId" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" value="@Model.ProductName" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Category</label>
                            <input type="text" class="form-control" value="@(Model.Category?.CategoryName ?? "-")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Material</label>
                            <input type="text" class="form-control" value="@(Model.Material ?? "-")" readonly />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="3" readonly>@Model.Description</textarea>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Price</label>
                            <input type="text" class="form-control" value="@(Model.Price.HasValue? Model.Price.Value.ToString("C") : "-")" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Discount</label>
                            <input type="text" class="form-control" value="@(Model.Discount.HasValue? Model.Discount.Value.ToString("P0") : "-")" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Stock Quantity</label>
                            <input type="text" class="form-control" value="@Model.StockQuantity" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <input type="text" class="form-control" value="@Model.Status" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Created At</label>
                            <input type="text" class="form-control" value="@(Model.CreatedAt.HasValue? Model.CreatedAt.Value.ToString("yyyy/MM/dd HH:mm") : "-")" readonly />
                        </div>

                        <!-- Edit/Delete/Back buttons -->
                        <div class="col-12 text-center mt-4">
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary me-2">Edit</a>

                            <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.ProductId" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this product?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary ms-2">Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>

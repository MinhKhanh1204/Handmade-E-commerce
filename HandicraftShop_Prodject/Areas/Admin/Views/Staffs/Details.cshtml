@model DTO.StaffDTO

@{
    ViewData["Title"] = "Staff Details";
}

<div class="pagetitle">
    <h1>Staff Details</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Staffs" asp-action="Index">Staff Management</a>
            </li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>
</div>

<section class="section">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm p-4">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Staff ID</label>
                            <input type="text" class="form-control" value="@Model.StaffId" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" value="@Model.FullName" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Date of Birth</label>
                            <input type="text" class="form-control" value="@(Model.DateOfBirth?.ToString("yyyy/MM/dd") ?? "-")" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Gender</label>
                            <input type="text" class="form-control" value="@(Model.Gender ?? "-")" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="text" class="form-control" value="@(Model.Phone ?? "-")" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Citizen ID</label>
                            <input type="text" class="form-control" value="@(Model.CitizenId ?? "-")" readonly />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" rows="2" readonly>@(Model.Address ?? "-")</textarea>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Hire Date</label>
                            <input type="text" class="form-control" value="@(Model.HireDate?.ToString("yyyy/MM/dd") ?? "-")" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <input type="text" class="form-control" value="@Model.Status" readonly />
                        </div>

                        <div class="col-12 text-center mt-4">
                            <!-- Edit button -->
                            <a asp-area="Admin" asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <!-- Delete button -->
                            <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.StaffId" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this staff?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>

                            <!-- Back button -->
                            <a asp-area="Admin" asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

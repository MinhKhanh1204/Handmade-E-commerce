@model IEnumerable<DTO.StaffDTO>
@using System.Linq

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Staff Management";

    int currentPageSize = 10;
    int currentPage = 1;
    string currentSearch = "";

    if (ViewBag.PageSize != null)
    {
        int.TryParse(ViewBag.PageSize.ToString(), out currentPageSize);
    }

    if (ViewBag.CurrentPage != null)
    {
        int.TryParse(ViewBag.CurrentPage.ToString(), out currentPage);
    }

    if (ViewBag.SearchString != null)
    {
        currentSearch = ViewBag.SearchString.ToString();
    }
}

<div class="pagetitle">
    <h1>Staff Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Staff</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">

                        <!-- Controls: Page Size, Search, Add New -->
                        <div class="d-flex w-100 justify-content-between align-items-center mt-3 mb-3 flex-wrap gap-2">

                            <!-- Page Size -->
                            <div>
                                <form method="get" id="pageSizeForm">
                                    <select name="pageSize" class="form-select"
                                            onchange="document.getElementById('pageSizeForm').submit()">
                                        @foreach (var size in new int[] { 5, 10, 25, 50 })
                                        {
                                            if (size == currentPageSize)
                                            {
                                                <option value="@size" selected="selected">@size</option>
                                            }
                                            else
                                            {
                                                <option value="@size">@size</option>
                                            }
                                        }
                                    </select>
                                    <input type="hidden" name="searchString" value="@currentSearch" />
                                </form>
                            </div>

                            <!-- Search -->
                            <div>
                                <form method="get" class="d-flex">
                                    <input type="text" name="searchString" value="@currentSearch"
                                           class="form-control me-2" placeholder="Search staff..." />
                                    <input type="hidden" name="pageSize" value="@currentPageSize" />
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </form>
                            </div>

                            <!-- Add New Staff -->
                            <div>
                                <a asp-controller="Staffs" asp-action="Create" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Add New Staff
                                </a>
                            </div>
                        </div>

                        <!-- Staff Table -->
                        <table class="table table-striped table-hover align-middle mt-3">
                            <thead class="table-light">
                                <tr>
                                    <th>Staff ID</th>
                                    <th>Full Name</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Hire Date</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            No staff found.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var s in Model)
                                    {
                                        <tr>
                                            <td>@s.StaffId</td>
                                            <td>@s.FullName</td>
                                            <td>@(s.Phone ?? "-")</td>
                                            <td>@(s.Gender ?? "-")</td>
                                            <td>@(s.HireDate.HasValue ? s.HireDate.Value.ToString("yyyy/MM/dd") : "-")</td>
                                            <td>
                                                <span class="badge @(s.Status == "Active" ? "bg-success" : "bg-danger")">
                                                    @s.Status
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-controller="Staffs" asp-action="Details" asp-route-id="@s.StaffId" class="btn btn-info text-white">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-3">
                                @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link"
                                           href="@Url.Action("Index", new { searchString = currentSearch, page = i, pageSize = currentPageSize })">
                                            @i
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
    </section>

@model IEnumerable<BussinessObject.Customer>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Address</td>
                        <td>
                            <span class="badge @(customer.Status == "Active" ? "bg-success" : "bg-danger")">
                                @customer.Status
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/Admin/Customer/Details/@customer.CustomerId" class="btn btn-info btn-sm" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Admin/Customer/Edit/@customer.CustomerId" class="btn btn-warning btn-sm" title="Edit Customer">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="/Admin/Customer/Delete/@customer.CustomerId" method="post" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this customer?')">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Delete Customer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No customers found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
